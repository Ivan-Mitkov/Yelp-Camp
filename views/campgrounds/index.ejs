<% include ../partials/header%>
  
    <div class='container'>
        <header class="jumbotron">

            <h1>Хижите в България</h1>

            <p>Всички хижи</p>
            <div>
                <a href="/campgrounds/new" class='btn btn-primary btn-lg'>Добави хижа</a>
            </div>

        </header>


        <div class='row-text-center' style='display:flex; flex-wrap: wrap;'>

            <% campgrounds.forEach((camp)=>{ %>

                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class='card'>
                        <img class="card-img-top img-fluid" src=<%=camp[ 'image'] %> alt=<%=camp['name']%> >
                            <div class="caption">
                                <%=camp['name'];%>
                            </div>
                            <div>
                                <a href="/campgrounds/<%= camp._id %>" class='btn btn-primary'>More info</a>
                            </div>

                    </div>

                </div>

                <% }); %>
        </div>
    </div>

    </div>


    <% include ../partials/footer%>